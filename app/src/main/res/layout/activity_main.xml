<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33999999"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/finContent"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/finNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDK开发商名称：珠海凡泰极客科技有限责任公司"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            />



        <TextView
            android:id="@+id/finVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDK版本号：2.13.49"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/finNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/finPlugin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="插件供应商(如有)：腾讯TBS"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/finVersion"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/finPluginVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="插件版本号(如有)：tbssdk:43903"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/finPlugin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="打开轻应用"
        app:layout_constraintTop_toBottomOf="@+id/finContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>